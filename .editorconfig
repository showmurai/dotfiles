# top-most EditorConfig file
root = true

# common setting
[*]
charset = utf-8
end_of_line = lf

# for makefile
[Makefile]
indent_style = tab
indent_size = 8

# for shell script
[*.sh]
indent_style = space
indent_size = 2

# for go-lang
[*.go]
indent_style = tab
indent_size = 4

# for python
[*.py]
indent_style = space
indent_size = 4

# for javascript
[*.js]
indent_style = space
indent_size = 2

# for c-lang
[*.c]
indent_style = tab
indent_size = 4

# for c++
[*.cpp]
indent_style = tab
indent_size = 4

# for header file
[*.h]
indent_style = tab
indent_size = 4

# for ruby
[*.rb]
indent_style = space
indent_size = 2

# for ruby
[*.yml]
indent_style = space
indent_size = 2

# for xml
[*.xml]
indent_style = space
indent_size = 2

# for json
[*.json]
indent_style = space
indent_size = 2

# for puppet
[*.pp]
indent_style = space
indent_size = 2

# for digdag
[*.dig]
indent_style = space
indent_size = 2

# for terraform
[*.tf]
indent_style = space
indent_size = 2

# for yaml
[*.yaml]
indent_style = space
indent_size = 2
